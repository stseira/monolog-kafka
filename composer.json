{
    "name": "stseira/monolog-kafka",
    "description": "Apache Kafka handler for Monolog",
    "keywords": ["log", "logging", "psr-3", "kafka", "apache kafka"],
    "homepage": "http://github.com/kozlice/monolog-kafka",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Nazarov",
            "email": "i.kozlice@protonmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "monolog/monolog": "^1.20.0",
        "ext-rdkafka": ">=1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-4": {"Kozlice\\Monolog\\": "src/Monolog"}
    },
    "autoload-dev": {
        "psr-4": {"Kozlice\\Monolog\\": "tests/Monolog"}
    },
    "scripts": {
        "test": "phpunit"
    }
}
